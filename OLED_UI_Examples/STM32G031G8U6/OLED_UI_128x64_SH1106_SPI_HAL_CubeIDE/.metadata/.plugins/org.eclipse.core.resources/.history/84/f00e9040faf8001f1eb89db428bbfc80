  HAL_GPIO_WritePin(GPIOC, ADS1231_SCLK_Pin|LIS_RES_Pin, GPIO_PIN_RESET);

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOA, OLED_DC_Pin|OLED_RES_Pin|PWRON_Pin, GPIO_PIN_RESET);

